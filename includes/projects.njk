---
pagination:
  data: collections.projects
  size: 10
  reverse: true
  alias: pagination
---

{% include "head.njk" %}
<main id="content">
  <div class="container-large">
    <h1>{{ title }}</h1>
    {{ content | safe }}
    <section class="projects">
      <div>
        {% for project in pagination %}
          {% include "project-item.njk" %}
        {% endfor %}
      </div>
    </section>
    {% if pagination.pageLinks.length > 1 %}
    <nav class="pagination">
      {% if pagination.previousPageLink %}
        <a class="pagination__item" href="{{ pagination.previousPageHref | url }}">Previous</a>
      {% endif %}
      {% if pagination.nextPageLink %}
        <a class="pagination__item" href="{{ pagination.nextPageHref | url }}">Next</a>
      {% endif %}
    </nav>
    {% endif %}
  </div>
</main>
{% include "footer.njk" %}
