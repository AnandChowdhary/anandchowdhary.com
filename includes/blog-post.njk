{% include "head.njk" %}
<main itemscope itemtype="http://schema.org/Article" id="content">
  <header class="intro s">
    <div>
      <h1 itemprop="name">{{ title }}</h1>
      <meta itemprop="author" content="Anand Chowdhary" />
      <meta itemprop="dateCreated" content="{{ date }}" />
      <meta itemprop="datePublished" content="{{ date }}" />
      <meta itemprop="keywords" content="{% for tag in tags %}{{ tag }}, {% endfor %}" />
      <a class="show-project-details" href="#details">Show blog post details</a>
      <div class="project-intro" id="details">
        <dl>
          {% if date %}<span>
            <dt>Posted</dt>
            <dd>{{ date | datetime | safe }}</dd>
          </span>{% endif %}
          {% if tags and (tags.length > 1) %}<span>
            <dt>Tags</dt>
            {% for tag in tags %}{% if tag !== "blog" %}
            <dd><a href="/blog/{{ tag }}/">{{ tag | getBlogTagName }}</a></dd>
            {% endif %}{% endfor %}
          </span>{% endif %}
        </dl>
      </div>
      <a class="hide-project-details" href="#">Hide blog post details</a>
    </div>
  </header>
  <div class="container-outer" itemprop="articleBody">
    {{ content | safe }}
    {% if alias %}
    <p><a href="{{ alias | url }}">{{ alias | iconify | safe }}Read {{ title }} on {{ publisher }}</a></p>
    {% endif %}
  </div>
</main>
{% include "footer.njk" %}
