{% include "head.njk" %}
<main id="content">
  <header class="intro s">
    <div>
      <h1>{{ title }}</h1>
      {{ content | safe }}
    </div>
  </header>
  <div class="container-outer">
    <h2>Travel</h2>
    <section class="sum-list nr">
      {% for item in cities %}{% if loop.index <= 3 %}
        <article>
          <a href="/life/travel/{{ item }}">
            <div>
              <img alt="" src="{{ item | cityImageUrl }}">
              <div>
                <h3>{{ item | place }}</h3>
                <div>{{ item | cityCountry }}</div>
              </div>
            </div>
          </a>
        </article>
      {% endif %}{% endfor %}
    </section>
    <p><a href="/life/travel/">Explore more cities &rarr;</a></p>
    <h2>Programming</h2>
    <section class="sum-list nr">
      {% for item in programming.languages %}{% if loop.index <= 3 %}
        <article>
          <span class="a" href="/projects/stack/{{ item.name | slug }}">
            <div>
              <img src="{{ (item.name + ' icon/70/70') | bingImageUrl }}" alt="">
              <div>
                <h3>{{ item.name }}</h3>
                <div>{{ item.text }}</div>
              </div>
            </div>
          </span>
        </article>
      {% endif %}{% endfor %}
    </section>
    <p><a href="/life/work/programming/">Explore more top languages &rarr;</a></p>
    <h2>Emails</h2>
    <div class="data-summary">
      <div>
        <div>{{ emails.sentLastWeek }}</div>
        <div>Sent this week</div>
      </div>
      <div>
        <div>{{ emails.receivedLastWeek }}</div>
        <div>Received this week</div>
      </div>
      <div>
        <div>{{ ((emails.sentLastWeek / emails.receivedLastWeek) * 100) | round(2) }}%</div>
        <div>Reply ratio</div>
      </div>
    </div>
    <p><a href="/life/work/emails/">Explore more emails overview &rarr;</a></p>
    <h2>Podcasts</h2>
    <section class="sum-list nr">
      {% for item in pocketCastsPodcasts %}{% if loop.index <= 3 %}
        <article>
          <a href="{{ item.url | url }}">
            <div>
              <img alt="" src="{{ (item.title + ' podcast cover') | bingImageUrl }}">
              <div>
                <h3>{{ item.title }}</h3>
                <div>{{ item.author }}</div>
              </div>
            </div>
          </a>
        </article>
      {% endif %}{% endfor %}
    </section>
    <p><a href="/life/listening/music/podcasts/">Explore more podcasts &rarr;</a></p>
    <h2>Top Songs</h2>
    <section class="sum-list nr">
      {% for item in shortTermTracks %}{% if loop.index <= 3 %}
        <article>
          <a href="{{ item.href | replace('api.spotify.com/v1/tracks', 'open.spotify.com/track') }}">
            <div>
              <img alt="" src="{{ item.album.images[1].url }}">
              <div>
                <h3>{{ item.name }}</h3>
                <div>{{ item.artists[0].name }}</div>
              </div>
            </div>
          </a>
        </article>
      {% endif %}{% endfor %}
    </section>
    <p><a href="/life/listening/music/songs/">Explore more top tracks &rarr;</a></p>
    <h2>Top Artists</h2>
    <section class="sum-list">
      {% for item in shortTermArtists %}{% if loop.index <= 3 %}
        <article>
          <a href="{{ item.href | replace('api.spotify.com/v1/artists', 'open.spotify.com/artist') }}">
            <div>
              <img alt="" src="{{ item.images[1].url }}">
              <div>
                <h3>{{ item.name }}</h3>
                <div>{{ item.genres[0] | capitalize }}</div>
              </div>
            </div>
          </a>
        </article>
      {% endif %}{% endfor %}
    </section>
    <p><a href="/life/listening/music/artists/">Explore more top artists &rarr;</a></p>
    <h2>Books</h2>
    <section class="sum-list nr nh">
      {% for item in books %}{% if loop.index <= 3 %}
        <article>
          <a href="{{ book.url | url }}">
            <div>
              <img src="{{ item.image_url }}" alt="">
              <div>
                <h3>{{ item.title }}</h3>
                <div>{{ item.author }}</div>
              </div>
            </div>
          </a>
        </article>
      {% endif %}{% endfor %}
    </section>
    <p><a href="/life/reading/">Explore more books &rarr;</a></p>
  </div>
</main>
{% include "footer.njk" %}
