<article class="events-item">
  <div class="content">
    <h2>
      <a href="{{ post.url | url }}">
        <img class="item-icon" alt="" src="{{ post.data.icon }}"><span>{{ post.data.title }}</span>
      </a>
    </h2>
    <div class="location">
      <div>{{ post.data.venue }}</div>
      <div><a href="/life/travel/{{ post.data.places }}">{{ post.data.places | place }}</a></div>
    </div>
    <div class="meta">
      <div>
        <a href="{{ post.url | url }}">
          <time>{{ post.data.date.toLocaleDateString("en-US", {
            day: "numeric",
            month: "short",
            year : "numeric"
          }) }}</time>
        </a>
      </div>
      <div><a class="continue" href="{{ post.url | url }}">Read {{ post.data.title }} &rarr;</a></div>
    </div>
  </div>
</article>
