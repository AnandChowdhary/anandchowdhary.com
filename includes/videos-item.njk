<article class="videos-item">
  <a href="{{ video.url | url }}">
    <div class="content">
      <div class="video-image" style="background-image: url('{{ video.img }}')">
        <svg viewBox="0 0 111 111" version="1.1" xmlns="http://www.w3.org/2000/svg">
            <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                <g transform="translate(-69, -52)" fill="#fff">
                  <polygon transform="translate(124, 107) rotate(-270) translate(-124, -107) " points="124.5 52 180 163 69 163"></polygon>
                </g>
            </g>
        </svg>
      </div>
      <div>
        <h2>{{ video.name }}</h2>
        <p>{{ video.copyright }}</p>
        <div>
          {{ video.url | iconify | safe }}
          <span>{{ video.city | place }}</span>
          <span>{{ video.date | datetime | safe }}</span>
          <span>{{ video.duration }}</span>
        </div>
      </div>
    </div>
  </a>
</article>
