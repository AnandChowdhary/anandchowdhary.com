{% include "head.njk" %}
<main id="content">
  <header class="intro s">
    <div>
      <nav class="breadcrumbs">
        <a href="/life/">Life</a>
        <a href="/life/work/">Work</a>
        <a href="/life/work/emails/">{{ title }}</a>
      </nav>
      <h1>{{ title }}</h1>
      {{ content | safe }}
      <p>This is a living document, and data was last updated {{ lifeDataLastUpdated["emails.yml"].commit.author.date | datetimetime | safe }} in <a href="{{ lifeDataLastUpdated['emails.yml'].html_url }}">{{ lifeDataLastUpdated["emails.yml"].sha | truncate(6, true, "") }}</a> in <a href="https://github.com/AnandChowdhary/life-data/blob/master/emails.yml">emails.yml</a> using <a href="https://github.com/AnandChowdhary/services/blob/master/api/wakatime.ts">Wakatime</a> on GitHub.</p>
    </div>
  </header>
  <div class="container-outer">
    <div class="data-summary">
      <div>
        <div>{{ emails.sentLastWeek }}</div>
        <div>Sent this week</div>
      </div>
      <div>
        <div>{{ emails.receivedLastWeek }}</div>
        <div>Received this week</div>
      </div>
      <div>
        <div>{{ ((emails.sentLastWeek / emails.receivedLastWeek) * 100) | round(2) }}%</div>
        <div>Reply ratio</div>
      </div>
    </div>
    <div class="data-summary">
      <div>
        <div>{{ emails.sentToday }}</div>
        <div>Sent today</div>
      </div>
      <div>
        <div>{{ emails.receivedToday }}</div>
        <div>Received today</div>
      </div>
      <div>
        <div>{{ ((emails.sentToday / emails.receivedToday) * 100) | round(2) }}%</div>
        <div>Reply ratio</div>
      </div>
    </div>
  </div>
</main>
{% include "footer.njk" %}
