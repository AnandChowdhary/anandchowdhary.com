<main itemscope itemtype="http://schema.org/Article" id="content">
  <div class="l">
    <div>
      {% if post.data.alias %}
      <h2 itemprop="name"><a href="{{ post.data.alias | url }}">{{ post.data.title }}</a></h2>
      {% else %}
      <h2 itemprop="name"><a href="{{ post.url | url }}">{{ post.data.title }}</a></h2>
      {% endif %}
      <div>Posted on <time itemprop="dateCreated">{{ post.data.date.toLocaleDateString("en-US", {
        day: "numeric",
        month: "short",
        year : "numeric"
      }) }}</time></div>
      {% for tag in post.data.tags %}
        {% if tag !== "blog" %}
          <a class="tag" href="/blog/{{ tag }}/">{{ tag }}</a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
  <div class="r" itemprop="articleBody">
    {% excerpt post %}
    {% if post.data.alias %}
    <p><a itemprop="url" href="{{ post.data.alias | url }}">{{ post.data.alias | iconify | safe }}Read {{ post.data.title }} on {{ post.data.publisher }}</a></p>
    {% else %}
    <p><a itemprop="url" href="{{ post.url | url }}">Read {{ post.data.title }} &rarr;</a></p>
    {% endif %}
  </div>
</article>
