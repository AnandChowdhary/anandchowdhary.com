<article itemscope itemtype="http://schema.org/Article" class="project-item">
  <a itemprop="url" href="{{ project.url | url }}">
    <div aria-hidden="true" class="project-image project-image-{{ project.data.style }}" style="background-color: {{ project.data.bg }}">
      <div
        class="project-image-front"
        style="background-image: url('https://images.weserv.nl/?url=https://anandchowdhary.com{{ project.data.img_src }}.{{ project.data.img_type }}&w=600&l=2&af&il&output=webp')"
      ></div>
    </div>
    <div>
      {% if project.data.icon %}
        <div class="project-item-icon{% if project.data.icon_bg %} project-item-icon-box{% endif %}">
          <img itemprop="thumbnailUrl" alt="" src="https://images.weserv.nl/?url=https://anandchowdhary.com{{ project.data.icon }}&w=80&w=80&l=2&af&il&output=webp">
        </div>
      {% endif %}
      <h2 itemprop="name">{{ project.data.title }}</h2>
      <time itemprop="dateCreated">{{ project.data.date.toLocaleDateString("en-US", {
        month: "long",
        year : "numeric"
      }) }}</time>
    </div>
    <p itemprop="abstract">{{ project.data.intro }}</p>
    <div class="project-tags">
      {% if project.data.work %}
        {% for tag in project.data.work %}
          <span>{{ tag }}</span>
        {% endfor %}
      {% endif %}
      {% if project.data.stack %}
        {% for tag in project.data.stack %}
          <span class="stack">{{ tag }}</span>
        {% endfor %}
      {% endif %}
      {% if project.data.tools %}
        {% for tag in project.data.tools %}
          <span class="tools">{{ tag }}</span>
        {% endfor %}
      {% endif %}
    </div>
  </a>
</article>
