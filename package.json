{
  "name": "anandchowdhary.com",
  "version": "5.0.0",
  "repository": "git@github.com:AnandChowdhary/anandchowdhary.com",
  "author": "Anand Chowdhary <mail@anandchowdhary.com>",
  "license": "MIT",
  "scripts": {
    "build-site": "rm -rf life-data && git clone --depth 1 https://github.com/AnandChowdhary/life-data && npm run build",
    "copy-highlights": "mkdirp public/images/highlights && cp -r life-data/highlights public/images",
    "compress-images": "imagemin cache/images/thumbnails/* --out-dir=cache/images/thumbnails && imagemin cache/images/domains/* --out-dir=cache/images/domains",
    "copy-cache-images": "npm run compress-images && mkdirp public/images/cache && cp -r cache/images/* public/images/cache",
    "build": "npm run parcel-build && npm run copy-static && node helpers/life-data.js && node helpers/blog-tags.js && eleventy && npm run copy-highlights && npm run copy-cache-images && node helpers/sitemap.js",
    "serve": "npm run parcel-build && npm run copy-static && eleventy --serve & npm run watch-parcel",
    "lint": "prettier '{content,helpers,includes,scripts,styles,.}/*.{ts,scss,md,js}' --write",
    "copy-static": "cp -r static/* public/assets",
    "watch-parcel": "onchange 'scripts/**/*.js' 'styles/**/*.scss' -- npm run parcel-build",
    "parcel-build": "rm -rf dist && parcel build scripts/parcel.html && node helpers/parcel.js"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@11ty/eleventy-plugin-rss": "^1.0.7",
    "@babel/core": "^7.8.4",
    "@types/debounce": "^1.2.0",
    "axios": "^0.19.2",
    "axios-cache-adapter": "^2.5.0",
    "cheerio": "^1.0.0-rc.3",
    "del": "^5.1.0",
    "dot-object": "^2.1.2",
    "download": "^7.1.0",
    "eleventy-plugin-pwa": "^1.0.8",
    "eleventy-plugin-seo": "^0.5.0",
    "front-matter": "^3.1.0",
    "fs-extra": "^8.1.0",
    "highlight.js": "^9.18.1",
    "html-minifier": "^4.0.0",
    "husky": "^4.2.1",
    "imagemin-cli": "^5.1.0",
    "js-yaml": "^3.13.1",
    "markdown-it": "^10.0.0",
    "markdown-it-anchor": "^5.2.5",
    "parcel-bundler": "^1.12.4",
    "prettier": "^1.19.1",
    "recursive-readdir": "^2.2.2",
    "sass": "^1.25.0",
    "slugify": "^1.3.6",
    "ssri": "^7.1.0",
    "typescript": "^3.7.5",
    "typeset": "^0.2.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && git add ."
    }
  },
  "dependencies": {
    "debounce": "^1.2.0",
    "medium-zoom": "^1.0.5",
    "onchange": "^6.1.0",
    "timeago.js": "^4.0.2"
  }
}
