{
  "name": "anandchowdhary.com",
  "version": "26.0.0",
  "repository": "git@github.com:AnandChowdhary/anandchowdhary.com",
  "author": "Anand Chowdhary <mail@anandchowdhary.com>",
  "license": "MIT",
  "scripts": {
    "build-site": "npm run task:clone && npm run build",
    "build": "npm run site:scripts && npm run site:preprocess && npm run site:generate && npm run site:postprocess",
    "serve": "mkdirp public && npm run site:preprocess && npm run task:highlights && npm run task:cacheimages && eleventy --serve & npm run watch-parcel",
    "lint": "prettier '{content,helpers,includes,scripts,styles,.}/*.{ts,scss,md,js}' --write",
    "watch-parcel": "parcel watch scripts/parcel.html & onchange 'dist/*' -- npm run task:parcel",
    "site:scripts": "npm run task:js && npm run task:parcel",
    "site:generate": "eleventy",
    "site:preprocess": "npm run task:env && npm run task:static && npm run task:lifedata && npm run task:blogtags",
    "site:postprocess": "npm run task:highlights && npm run task:cacheimages && npm run task:sitemap",
    "task:highlights": "mkdirp public/images/highlights && ncp life-data/highlights public/images/highlights",
    "task:compress": "imagemin cache/images/thumbnails/* --out-dir=cache/images/thumbnails && imagemin cache/images/domains/* --out-dir=cache/images/domains",
    "task:cacheimages": "mkdirp public/images/cache && ncp cache/images public/images/cache",
    "task:clone": "rimraf life-data && git clone --depth 1 https://github.com/AnandChowdhary/life-data",
    "task:static": "ncp static public",
    "task:env": "node helpers/env.js",
    "task:lifedata": "node helpers/life-data.js",
    "task:blogtags": "node helpers/blog-tags.js",
    "task:sitemap": "node helpers/sitemap.js",
    "task:parcel": "node helpers/parcel.js",
    "task:js": "rimraf dist && parcel build scripts/parcel.html"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@11ty/eleventy-plugin-rss": "^1.0.9",
    "@babel/core": "^7.12.1",
    "@types/debounce": "^1.2.0",
    "axios": "^0.21.1",
    "axios-cache-adapter": "^2.5.0",
    "cheerio": "^1.0.0-rc.3",
    "del": "^6.0.0",
    "download": "^8.0.0",
    "eleventy-plugin-pwa": "^1.0.8",
    "eleventy-plugin-seo": "^0.5.1",
    "front-matter": "^4.0.2",
    "fs-extra": "^9.0.1",
    "highlight.js": "^10.2.1",
    "html-minifier": "^4.0.0",
    "husky": "^4.3.0",
    "imagemin-cli": "^6.0.0",
    "js-yaml": "^3.14.0",
    "markdown-it": "^12.0.0",
    "markdown-it-anchor": "^6.0.0",
    "mkdirp": "^1.0.4",
    "natural": "^2.1.5",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "parcel": "^1.12.4",
    "prettier": "^2.1.2",
    "recursive-readdir": "^2.2.2",
    "rimraf": "^3.0.2",
    "sass": "^1.27.0",
    "slugify": "^1.4.5",
    "ssri": "^8.0.1",
    "typescript": "^4.0.3",
    "typeset": "^0.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && git add ."
    }
  },
  "dependencies": {
    "debounce": "^1.2.0",
    "medium-zoom": "^1.0.6",
    "timeago.js": "^4.0.2"
  }
}
